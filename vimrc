syntax on
set timeoutlen=1000 ttimeoutlen=0
let mapleader=" "

set number
set relativenumber
set ruler

set textwidth=79
set formatoptions=tcqrn1
set tabstop=2
set shiftwidth=2
set softtabstop=2
set expandtab

" Search Settings
set hlsearch
set incsearch
set showmatch
set ignorecase
set smartcase
map <leader>h :noh<Enter>

" Generic Shortcuts
map <leader>q :q<Enter>
map <leader>w :w<Enter>
